<h1 class="text-info"> Marking Page </h1>
<%= render partial: "page", locals: {page: @marking_page}%>

			<%= form_tag  marking_page_print_path(marking_page_id: get_id) do |f|%>

				<%= label_tag(:count, "Sheets required",class: "form-label") %>
				<%= text_field_tag(:count) %>

				<%= label_tag(:extension, "Add Extension statement?", class: "form-check-label")%>
				<%= check_box_tag(:extension)%>

				<%= submit_tag("Print")%>

			<% end%>
			
			<%= link_to 'delete', marking_page_path(@marking_page),
            data: {:confirm => "You can't undo this! Are you sure?"}, :method => :delete %>
			

			
			
			
			